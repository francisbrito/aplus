%h2 Review boxes

#weeks_study
	- @review_boxes.each do |day, rbl|
		%ul
			#day= "#{@wdays[Date.parse(day).wday]} #{Date.parse(day).day.ordinalize}"
			- rbl.each do |rb|
				%li
					- if rb.topic.subject
						%span{class: "box b#{rb.box}", id: "box"}
						%span.tag{style: "background-color:##{rb.topic.subject.color}"}
							=rb.topic.subject.code
					%span{class: "box b#{rb.box}", id: "box"}
					= rb.topic.title